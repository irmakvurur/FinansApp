<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:padding="16dp">

        <!-- Gelir -->
        <TextView
            android:id="@+id/navGelir"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Gelir"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <!-- Gider -->
        <TextView
            android:id="@+id/navGider"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Gider"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <!-- Fatura -->
        <TextView
            android:id="@+id/navFatura"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fatura"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <!-- Ana İçerik -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigationBar"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Hoşgeldiniz"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Hesaplarınızdaki gelir giderleri görebilirsiniz veya faturanızı ödeyebilirsiniz."
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textStartAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yapmak istediğiniz işleme başlayabilirsiniz."
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

</RelativeLayout>
